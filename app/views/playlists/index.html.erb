<%# <%= index_header %> 
<h1>The Playlists</h1>
<div class="album text-muted">
   <div class="container">
      <div class="row">
         <% @playlists.each do |p| %>
            <%#= render partial: 'card', :playlist => p %>
            <a href="/playlists/<%= p.id %>" class="card" style="width: 15rm; display: inline-block">
               <div class="card-body">
                  <strong class="card-text"><%= p.name %></strong>
                  <p class="card-text"><%= p.views %></p>
                  <p class="card-text"><%= p.likes %></p>
                  <a href="/playlists/<%= p.id %>" class="stretched-link"></a>
            </a>
         <% end %>
      </div>
    </div>
</div>
