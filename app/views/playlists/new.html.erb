<%#A form to import a specific Spotify Playlist by ID, using current user ID%>
<%# Refactor this later for better user experience%>
<%= render partial: 'errors/errors', locals: {model: @playlist} %>

<h3> Import a new Playlist from Spotify </h3>
<%= form_with(url: 'playlists#new', method: 'new', class: 'd-flex') do |f|%>
    <%= f.text_field :spotify_id, class: "form-control me-2", placeholder: "Put Spotify Playlist ID Key here"%>
    <%= f.submit :new, class: 'btn btn-outline-success' %>
<% end %>